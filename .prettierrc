{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "plugins": ["prettier-plugin-astro"]
      }
    },
    {
      "files": "*.js",
      "options": { "parser": "babel" }
    },
    {
      "files": "*.ts",
      "options": { "parser": "typescript" }
    },
    {
      "files": "*.css",
      "options": { "parser": "css" }
    },
    {
      "files": "*.json",
      "options": { "parser": "json" }
    },
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    }
  ]
}