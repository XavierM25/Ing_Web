---
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const userData = {
  nombre: "David Montaño",
  rol: "Estudiante",
  cursos: 12,
  certificados: 5
};
---

<DashboardLayout title="Favoritos">
  <div class="p-4 S:p-6 tablet:p-8 laptop:ml-56 relative z-10s">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Mis Favoritos</h1>
    <div class="space-y-6">
      <div class="bg-white rounded-xl shadow-lg p-6 flex items-center gap-6">
        <div class="text-3xl">⭐</div>
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-gray-800">React Fundamentals</h3>
          <p class="text-gray-600 mt-1">Curso básico de React con proyectos prácticos</p>
          <button class="mt-4 px-4 py-2 bg-accent text-white rounded-lg hover:opacity-90 transition-opacity">
            Ver curso
          </button>
        </div>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-6 flex items-center gap-6">
        <div class="text-3xl">⭐</div>
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-gray-800">Node.js Master</h3>
          <p class="text-gray-600 mt-1">Desarrollo backend con Node.js y Express</p>
          <button class="mt-4 px-4 py-2 bg-accent text-white rounded-lg hover:opacity-90 transition-opacity">
            Ver curso
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>