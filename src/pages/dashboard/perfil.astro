---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import ProfileImageUpload from './resources/Profile/components/ProfileImageUpload';
import ProfileEdit from './resources/Profile/components/ProfileEdits';
import Card from './resources/Profile/components/Card/Card.astro';

const userData = {
  nombre: 'Xavier David Monta√±o Garc√≠a',
