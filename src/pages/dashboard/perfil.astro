---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import ProfileImageUpload from './components/ProfileImageUpload';

const userData = {
  nombre: 'David Monta√±o',
  rol: 'Estudiante',
  imagen: '',
};
---

<DashboardLayout title="Perfil">
  <div class="p-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Mi Perfil</h1>
    <div class="bg-white border-[#cbcbcb] border-1 rounded-xl p-6 max-w-2xl">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <ProfileImageUpload
          client:load
          currentImage={userData.imagen}
        />
        <div>
          <h2 class="text-2xl text-[#222] font-bold font-poppins text-center md:text-left">
            {userData.nombre}
          </h2>
          <p class="text-[#222] opacity-50 mt-1 font-semibold text-center md:text-left">
            {userData.rol}
          </p>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>