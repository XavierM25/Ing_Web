    completedSteps: 4,
    category: 'skill',
    description: 'Completa todos los proyectos prácticos de React',
  },
  {
    id: 9,
    icon: '🎨',
    title: 'Artista del CSS',
    subtitle: 'Maestría en Diseño Web',
    isCompleted: false,
    isTracked: false,
    requiredSteps: 10,
