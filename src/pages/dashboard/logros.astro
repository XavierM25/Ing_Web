---
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const userData = {
  nombre: "David Montaño",
  rol: "Estudiante",
  cursos: 12,
  certificados: 5
};
---

<DashboardLayout title="Logros">
  <div class="p-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Mis Logros</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="text-4xl mb-4">🏆</div>
        <h3 class="text-xl font-semibold text-accent mb-2">Primera Certificación</h3>
        <p class="text-gray-600">Completaste tu primer curso certificado</p>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="text-4xl mb-4">⭐</div>
        <h3 class="text-xl font-semibold text-accent mb-2">Estudiante Destacado</h3>
        <p class="text-gray-600">Top 10% en calificaciones</p>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="text-4xl mb-4">🎯</div>
        <h3 class="text-xl font-semibold text-accent mb-2">Racha Perfecta</h3>
        <p class="text-gray-600">7 días consecutivos de estudio</p>
      </div>
    </div>
  </div>
</DashboardLayout>