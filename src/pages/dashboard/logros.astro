    completedSteps: 3,
    category: 'skill',
    description: 'Completa todos los módulos avanzados de JavaScript',
  },
  {
    id: 8,
    icon: '🎯',
    title: 'Especialista en React',
    subtitle: 'Dominio de React',
    isCompleted: false,
    isTracked: true,
