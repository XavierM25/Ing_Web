    title: 'Racha Legendaria',
    daysCount: 30,
    isCompleted: false,
    isTracked: false,
    requiredSteps: 30,
    completedSteps: 15,
    category: 'streak',
    description: 'Mantén una racha de estudio durante 30 días consecutivos',
  },
  {
    id: 3,
    icon: '⚡',
    title: 'Racha Relámpago',
    daysCount: 15,
    isCompleted: false,
    isTracked: false,
    requiredSteps: 15,
    completedSteps: 0,
    category: 'streak',
    description: 'Completa 3 ejercicios diarios durante 15 días seguidos',
  },

  {
    id: 4,
    icon: '📜',
    title: 'Primera Certificación',
    subtitle: 'Desarrollo Web Frontend',
    isCompleted: true,
    isTracked: false,
    requiredSteps: 1,
    completedSteps: 1,
    category: 'course',
    description: 'Completa tu primera certificación en desarrollo web',
  },
  {
    id: 5,
    icon: '🏗️',
    title: 'Arquitecto Full Stack',
    subtitle: 'Desarrollo Web Completo',
    isCompleted: false,
    isTracked: false,
    requiredSteps: 3,
    completedSteps: 0,
    category: 'course',
    description: 'Completa las certificaciones de Frontend, Backend y DevOps',
  },
  {
    id: 6,
    icon: '🎓',
    title: 'Graduado con Honores',
    subtitle: 'Excelencia Académica',
    isCompleted: false,
    isTracked: true,
    requiredSteps: 5,
    completedSteps: 3,
    category: 'course',
    description: 'Completa 5 cursos con una puntuación superior al 90%',
  },

  {
    id: 7,
    icon: '🚀',
    title: 'Maestro JavaScript',
    subtitle: 'Domina JavaScript Avanzado',
    isCompleted: false,
    isTracked: false,
