    requiredSteps: 6,
    completedSteps: 2,
    category: 'skill',
    description: 'Implementa tests unitarios y de integración en 6 proyectos',
  },
];

const trackedAchievements = achievements.filter((a) => a.isTracked);
const completedAchievements = achievements.filter((a) => a.isCompleted);
const inProgressAchievements = achievements.filter((a) => !a.isCompleted);
const availableAchievements = achievements.filter(
  (a) => !a.isTracked && !a.isCompleted,
);
import '../../layouts/styles/global.css';
---

<DashboardLayout title="Logros">
  <section class="p-8 relative z-10 S:p-6 tablet:p-8 laptop:ml-64">
    <div class="max-w-full space-y-8">
      <div class="grid grid-cols-2 gap-6 tablet:grid-cols-2 laptop:grid-cols-2">
        <div class="space-y-6">
          <h2 class="text-2xl font-bold text-[#222] font-onest">
            Logros Disponibles
          </h2>
          <div class="font-inter space-y-4">
            {
              availableAchievements.map((achievement) => (
                <AchievementCard achievement={achievement} />
              ))
            }
          </div>
        </div>

        <div class="space-y-6">
          <div>
            <h2 class="text-2xl font-bold text-[#222] font-onest mb-6">
              Logros en Progreso
            </h2>
            <div class="font-inter space-y-4">
              {
                inProgressAchievements
                  .filter((a) => a.isTracked)
                  .map((achievement) => (
                    <AchievementCard achievement={achievement} />
                  ))
              }
            </div>
          </div>

          <div>
            <h2 class="text-2xl font-bold text-[#222] font-onest mb-4">
              Logros Completados
            </h2>
            <div class="font-inter space-y-4">
              {
                completedAchievements.map((achievement) => (
                  <AchievementCard achievement={achievement} />
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</DashboardLayout>
