---
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const userData = {
  nombre: "David Montaño",
  rol: "Estudiante",
  cursos: 12,
  certificados: 5
};
---

<DashboardLayout title="Carrito">
  <div class="p-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Mi Carrito</h1>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-4">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="text-xl font-semibold text-gray-800">Curso de Python</h3>
              <p class="text-gray-600 mt-1">Instructor: Ana García</p>
            </div>
            <div class="text-xl font-bold text-accent">$49.99</div>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="text-xl font-semibold text-gray-800">Desarrollo Mobile</h3>
              <p class="text-gray-600 mt-1">Instructor: Carlos Ruiz</p>
            </div>
            <div class="text-xl font-bold text-accent">$59.99</div>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl shadow-lg p-6 h-fit">
        <h3 class="text-xl font-semibold text-gray-800 mb-6">Resumen</h3>
        <div class="space-y-4">
          <div class="flex justify-between text-gray-600">
            <span>Subtotal</span>
            <span>$109.98</span>
          </div>
          <div class="flex justify-between text-gray-600">
            <span>Descuento</span>
            <span>-$10.00</span>
          </div>
          <div class="flex justify-between text-xl font-bold text-gray-800 pt-4 border-t">
            <span>Total</span>
            <span>$99.98</span>
          </div>
          <button class="w-full py-3 bg-accent text-white rounded-lg mt-6 hover:opacity-90 transition-opacity">
            Proceder al pago
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>