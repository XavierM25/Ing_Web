---
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const userData = {
  nombre: "David Montaño",
  rol: "Estudiante",
  cursos: 12,
  certificados: 5
};
---

<DashboardLayout title="Postula a Beca">
  <div class="p-4 S:p-6 tablet:p-8 laptop:ml-56 relative z-10">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Postula a una Beca Gratuita</h1>
    <div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl">
      <div class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
            Nombre completo
          </label>
          <input
            type="text"
            id="name"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent"
            placeholder="Ingresa tu nombre"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
            Correo electrónico
          </label>
          <input
            type="email"
            id="email"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent"
            placeholder="tu@email.com"
          />
        </div>
        <div>
          <label for="course" class="block text-sm font-medium text-gray-700 mb-1">
            Curso de interés
          </label>
          <select
            id="course"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent"
          >
            <option value="">Selecciona un curso</option>
            <option value="web">Desarrollo Web</option>
            <option value="mobile">Desarrollo Mobile</option>
            <option value="data">Ciencia de Datos</option>
          </select>
        </div>
        <div>
          <label for="motivation" class="block text-sm font-medium text-gray-700 mb-1">
            ¿Por qué deberías recibir la beca?
          </label>
          <textarea
            id="motivation"
            rows="4"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent"
            placeholder="Cuéntanos tu motivación..."
          ></textarea>
        </div>
        <button class="w-full py-3 bg-accent text-white rounded-lg hover:opacity-90 transition-opacity">
          Enviar postulación
        </button>
      </div>
    </div>
  </div>
</DashboardLayout>