---
import { Button } from '@nextui-org/react';
import { Input } from '@nextui-org/react';
---

<div class="flex flex-col">
  <form>
    <Button
      variant="solid"
      className="flex flex-row bg-slate-700 text-white shadow-md w-full mt-3 p-2 rounded-xl text-center items-center justify-center space-x-2"
      client:visible
    >
      <svg
        viewBox="0 0 32 32"
        width="24"
        height="24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><g stroke-width="0"></g><g
          stroke-linecap="round"
          stroke-linejoin="round"></g><path
          d="M30.001 16.31c0-1.15-.095-1.99-.301-2.861H16.287v5.195h7.873c-.159 1.291-1.016 3.236-2.92 4.542l-.027.174 4.24 3.22.294.029c2.699-2.443 4.254-6.036 4.254-10.298"
          fill="#4285F4"></path><path
          d="M16.286 30c3.857 0 7.095-1.245 9.46-3.391l-4.507-3.423c-1.207.825-2.826 1.4-4.953 1.4A8.58 8.58 0 0 1 8.16 18.77l-.167.014-4.41 3.344-.058.157C5.874 26.857 10.7 30 16.286 30"
          fill="#34A853"></path><path
          d="M8.16 18.769A8.5 8.5 0 0 1 7.684 16c0-.964.174-1.898.46-2.769l-.008-.185L3.67 9.647l-.146.069A13.8 13.8 0 0 0 2 16c0 2.256.556 4.387 1.524 6.285z"
          fill="#FBBC05"></path><path
          d="M16.286 7.413c2.683 0 4.492 1.136 5.524 2.085l4.032-3.858C23.366 3.384 20.144 2 16.286 2 10.7 2 5.874 5.142 3.524 9.715l4.62 3.516c1.158-3.375 4.365-5.818 8.142-5.818"
          fill="#EB4335"></path></svg
      >
      <span>Google</span>
    </Button>
  </form>
  <form action="" class="flex flex-col space-y-3 animate-fade-in-right">
    <Input
      className="mt-3 bg-gray-800 text-white border-gray-700"
      type="email"
      label="Correo"
      placeholder="Ingresa tu correo"
      client:load
    />
    <Input
      className="mt-3"
      type="password"
      label="Contraseña"
      placeholder="Ingresa tu contraseña"
      client:load
    />
    <Button className="mt-8" variant="solid" client:visible
      >Iniciar Sesión</Button
    >
  </form>
</div>

