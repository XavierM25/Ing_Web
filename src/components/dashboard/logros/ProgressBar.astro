---
interface Props {
  progress: number;
  color?: string;
}

const { progress, color = 'indigo' } = Astro.props;
---

<div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
  <div
    class={`h-full bg-${color}-500 transition-all duration-300 ease-out`}
    style={`width: ${progress}%`}
  >
  </div>
</div>
