<Divider />
</div>
<form class="flex flex-col space-y-2 animate-fade-in-right mt-3 mb-3">
  <article
    class="w-full bg-white border-[#bfbfbf] border-[1px] rounded-xl"
  >
    <div class="flex flex-col m-3 text-[#222] h-[30px]">
      <h1
        class="text-[12px] opacity-75 text-[#222] -mt-[5px]" 
        style="font-family: Poppins, sans-serif; font-weight: 700;"
      >
        Correo
      </h1>
      <input
        maxlength="128"
        class="w-full text-[14px] bg-transparent text-[#222]"
        style="outline: none; font-family: Inter, sans-serif; font-weight: 400;"
        type="text"
        placeholder="Inserte correo"
      />
    </div>
  </article>
  <article
    class="w-full bg-white bg-opacity-5 border-[#bfbfbf] border-[1px] rounded-xl "
  >
    <div class="flex flex-col m-3 text-[#222] h-[30px]">
      <h1
        class="text-[12px] opacity-75 text-[#222] -mt-[5px]"
        style="font-family: Poppins, sans-serif; font-weight: 700;"
      >
        Contraseña
      </h1>
      <input
        maxlength="128"
        class="w-full text-[14px] bg-transparent text-[#222]"
        style="outline: none; font-family: Inter, sans-serif; font-weight: 400;"
        type="password"
        placeholder="Inserte contraseña"
      />
    </div>
  </article>
</form>
<form class="flex flex-row items-center justify-between animate-fade-in-right mt-4">
  <Checbox client:load />
  <a
    class="text-[#0169e1] text-[13px] text-end"
    href=""
    style="font-family: Inter, sans-serif; font-weight: 300;"
    >¿Olvidaste tu contraseña?</a
  >
</form>
<button
  class="hover:bg-black hover:text-white bg-white bg-opacity-5 border-[#bfbfbf] text-[#222] text-[14px] border-[1px] py-2 w-full rounded-2xl mt-6 mb-2 transition duration-300  animate-fade-in-right"
  style="font-family: Poppins, sans-serif;">Iniciar Sesión</button
>
