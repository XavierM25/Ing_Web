    <div
      id="card1"
      class="h-[835px] w-[550px] bg-white bg-opacity-5 border-[#3f3f3f] border-[1px] backdrop-blur rounded-3xl"
    >
      <span class="text-white m-8 flex flex-col">
        <h1
          class="text-[40px]"
          style="font-family: Inter, sans-serif; font-weight: 800;"
        >
          Básico
        </h1>
        <h1
          class="-mt-2 text-[20px] opacity-35 pb-5"
          style="font-family: GeistSans, sans-serif; font-weight: 300;"
        >
          1 estudiante
        </h1>
        <h1
          class="text-[60px] pb-12 text-[#79f23c] text-center"
          style="font-family: Inter, sans-serif; font-weight: 900;"
        >
          S/ 200
        </h1>
        <p>
          <ul class="space-y-5 flex flex-col">
            {
              features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    class="mr-2 flex-shrink-0"
                    width="24"
                    height="24"
                    viewBox="0 0 100 100"
                    xmlns="http://www.w3.org/2000/svg"
