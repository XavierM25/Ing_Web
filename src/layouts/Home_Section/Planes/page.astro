---
import '../../styles/global.css';
import { FEATURES, PLANS } from './components/constants';
import { ViewTransitions } from 'astro:transitions';
---

<ViewTransitions />
<Fragment>
  <section class="flex flex-col justify-center px-4 py-8 S:py-12 tablet:py-16">
    <div class="max-w-7xl w-full mx-auto">
      {/* Header Section */}
      <div class="text-center mb-8 S:mb-12 tablet:mb-16 font-inter">
        <h1
          class="text-[32px] S:text-[40px] tablet:text-[50px] laptop:text-[65px] text-[#222] font-black mb-2 tablet:mb-3"
        >
          Planes
        </h1>
        <p
          class="text-base S:text-lg tablet:text-xl laptop:text-[25px] text-[#222] opacity-50 px-4"
        >
          ¡Escoge tu plan de suscripción a la medida que desees!
        </p>
      </div>

      {/* Cards Grid */}
      <div
        class="grid grid-cols-1 gap-6 tablet:gap-8 place-items-center laptop:grid-cols-3 S:max-w-[450px] laptop:max-w-none mx-auto"
      >
        {
          PLANS.map((plan) => (
            <div class="w-full bg-white/5 border border-[#bfbfbf] backdrop-blur rounded-2xl S:rounded-3xl transition-all duration-300 hover:shadow-lg flex flex-col">
              {/* Card Content */}
              <div class="flex-1 p-6 S:p-8">
                <div class="mb-6 tablet:mb-8">
                  <h2 class="text-xl S:text-2xl tablet:text-[30px] text-[#222] font-extrabold font-onest">
                    {plan.name}
                  </h2>
                  <p class="text-sm tablet:text-[15px] text-[#222] opacity-35">
                    {plan.students}
                  </p>
                </div>

                {/* Price Section */}
                <div class="flex items-end mb-6 tablet:mb-8 font-inter">
                  <span
                    class="text-3xl S:text-4xl tablet:text-[45px] laptop:text-[50px] font-black"
                    style={{ color: plan.color }}
                  >
                    {plan.price}
                  </span>
                  <span class="text-lg S:text-xl tablet:text-[22px] laptop:text-[25px] text-[#222]/25 ml-2 mb-1">
                    /Anual
                  </span>
                </div>

                {/* Features List */}
                <ul class="space-y-3 tablet:space-y-4">
                  {FEATURES.map((feature) => (
                    <li class="flex items-start gap-2">
                      <svg
                        class="w-4 h-4 S:w-5 S:h-5 flex-shrink-0 mt-0.5"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <g stroke-width="0" />
                        <g stroke-linecap="round" stroke-linejoin="round" />
                        <path fill="#fff" d="M0 0h24v24H0z" />
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.559 3.697a3 3 0 0 1 4.882 0l.19.267a1 1 0 0 0 .925.413l.849-.095a3 3 0 0 1 3.313 3.313l-.095.85a1 1 0 0 0 .413.923l.267.19a3 3 0 0 1 0 4.883l-.267.19a1 1 0 0 0-.413.925l.095.849a3 3 0 0 1-3.313 3.313l-.85-.095a1 1 0 0 0-.923.413l-.19.267a3 3 0 0 1-4.883 0l-.19-.267a1 1 0 0 0-.925-.413l-.849.095a3 3 0 0 1-3.313-3.313l.095-.85a1 1 0 0 0-.413-.923l-.267-.19a3 3 0 0 1 0-4.883l.267-.19a1 1 0 0 0 .413-.925l-.095-.849a3 3 0 0 1 3.313-3.313l.85.095a1 1 0 0 0 .923-.413zm6.148 5.596a1 1 0 0 1 0 1.414l-3.819 3.819c-.49.49-1.286.49-1.776 0l-1.82-1.819a1 1 0 1 1 1.415-1.414L11 12.586l3.293-3.293a1 1 0 0 1 1.414 0"
                          fill="#222"
                        />
                      </svg>
                      <span class="text-xs S:text-sm tablet:text-base text-[#222]/75 font-poppins">
                        {feature.text}
                      </span>
                    </li>
                  ))}
                </ul>
              </div>

              {/* Button Section */}
              <div class="p-6 S:p-8 pt-4">
                <button class="w-full h-10 S:h-12 flex items-center justify-center gap-2 rounded-lg border border-[#bfbfbf] bg-[#222]/5 text-[#222]/50 hover:bg-white hover:text-[#0267dc] transition-colors duration-300 font-semibold font-inter text-sm S:text-base">
                  Adquirir
                  <svg
                    class="w-3 h-3 S:w-4 S:h-4"
                    viewBox="0 0 16 16"
                    fill="currentColor"
                  >
                    <path d="M9.53033 2.21968L9 1.68935L7.93934 2.75001L8.46967 3.28034L12.4393 7.25001H1.75H1V8.75001H1.75H12.4393L8.46967 12.7197L7.93934 13.25L9 14.3107L9.53033 13.7803L14.6036 8.70711C14.9941 8.31659 14.9941 7.68342 14.6036 7.2929L9.53033 2.21968Z" />
                  </svg>
                </button>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Fragment>
