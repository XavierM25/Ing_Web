---
import "../../styles/global.css";
import { Button } from "@nextui-org/react";
import { GeistSans } from "geist/font/sans";

const features = [
  "Certificado digital",
  "Contenido profesional",
  "Eventos exclusivos organizado por GuimarBot.",
  "Accede a precios especiales en talleres y cursos especializados.",
  "Monitorea tu progreso con evaluaciones interactivas y recibe retroalimentación constante.",
